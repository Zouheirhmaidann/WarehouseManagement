{
  "expo": {
    "name": "WarehouseManagement",
    "slug": "WarehouseManagement",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/wakilni-app-icon.png",
    "scheme": "warehousemanagement",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.zouheirhm98.WarehouseManagement",
      "infoPlist": {
        "NSCameraUsageDescription": "Wakilni requires camera access to scan barcodes."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/wakilni-app-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": ["CAMERA"]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/wakilni-app-icon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/wakilni-app-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      "expo-camera"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
